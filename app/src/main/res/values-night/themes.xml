<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Main.Screen.Theme" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/main_background_black</item>
        <item name="colorOnPrimary">@color/white</item>

        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/main_font_black</item>
    </style>

    <style name="Second.Screen.Theme" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/main_background_black</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="add_button">@drawable/add_button_night</item>
        <item name="like_button">@drawable/like_button_night</item>
        <item name="play_button">@drawable/play_button_dark</item>
        <item name="pause_button">@drawable/pause_button_dark</item>
    </style>

    <style name="Search.Screen.Theme" parent="Second.Screen.Theme">
        <item name="colorSurface">@color/white</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorOnSurface">@color/black</item>
        <item name="colorPrimaryVariant">@color/main_font_black</item>
        <item name="colorOnPrimarySurface">@color/white</item>
        <item name="placeholder_image_not_found">@drawable/placeholder_message_notfound_dark</item>
        <item name="placeholder_image_error">@drawable/placeholder_message_error_dark</item>
    </style>
</resources>