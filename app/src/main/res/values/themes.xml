<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <attr name="placeholder_image_not_found" />
    <attr name="placeholder_image_error" />

    <style name="Main.Screen.Theme" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/main_background_blue</item>
        <item name="colorOnPrimary">@color/white</item>

        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/main_font_black</item>

    </style>

    <style name="Second.Screen.Theme" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/white</item>
        <item name="colorOnPrimary">@color/main_font_black</item>

    </style>

    <style name="Search.Screen.Theme" parent="Second.Screen.Theme">
        <item name="colorSurface">@color/braight_gray_background</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="colorOnSurface">@color/main_font_black</item>
        <item name="colorPrimaryVariant">@color/dark_gray_background</item>
        <item name="colorOnPrimarySurface">@color/dark_gray_background</item>
        <item name="placeholder_image_not_found">@drawable/placeholder_message_notfound_light</item>
        <item name="placeholder_image_error">@drawable/placeholder_message_error_light</item>

    </style>


</resources>