<resources xmlns:tools="http://schemas.android.com/tools">

<!--    Base app colors BG n FONTS-->
    <attr name="prime_color" />
    <attr name="on_prime_color" />
    <attr name="search_text_main_color" />

<!--    Shapes-->
    <attr name="shape_back_ground" />
    <attr name="on_shape_back_ground" />
    <attr name="point_separator" />

<!--    Buttons or Draws-->
    <attr name="placeholder_image_not_found" />
    <attr name="placeholder_image_error" />
    <attr name="add_button" />
    <attr name="like_button" />
    <attr name="play_button" />
    <attr name="pause_button" />

    <style name="Main.Screen.Theme" parent="Theme.Material3.DayNight.NoActionBar">
<!--        Colors-->
        <item name="prime_color">@color/white</item>
        <item name="on_prime_color">@color/main_font_black</item>
        <item name="search_text_main_color">@color/dark_gray_background</item>

<!--        Shapes-->
        <item name="shape_back_ground">@color/braight_gray_background</item>
        <item name="on_shape_back_ground">@color/dark_gray_background</item>
        <item name="point_separator">@color/dark_gray_background</item>

<!--        Draws-->
        <item name="add_button">@drawable/add_button</item>
        <item name="like_button">@drawable/like_button</item>
        <item name="play_button">@drawable/play_button</item>
        <item name="pause_button">@drawable/pause_button</item>
        <item name="placeholder_image_not_found">@drawable/placeholder_message_notfound_light</item>
        <item name="placeholder_image_error">@drawable/placeholder_message_error_light</item>
    </style>

</resources>