<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MainScreenActivity">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">16dp</item>
    </style>

    <style name="MainScreenHeader">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">22sp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="VerticalLinearLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="MainScreenButton" parent="Widget.MaterialComponents.Button.UnelevatedButton">>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_marginBottom">@dimen/margin_biggest_16dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:backgroundTint">?attr/colorPrimaryVariant</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">?attr/colorOnPrimarySurface</item>
        <item name="android:textSize">@dimen/text_size_big_22sp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="SettingsScreenActivity">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">?attr/colorSecondary</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="ScreenHeaderLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:padding">4dp</item>
    </style>

    <style name="ScreenHeaderButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:background">?attr/colorSecondary</item>
        <item name="android:importantForAccessibility">no</item>
        <item name="android:padding">12dp</item>
    </style>

    <style name="ScreenHeaderText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:layout_weight">1</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="android:textSize">@dimen/text_size_big_22sp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="ScreenOption">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingStart">@dimen/padding_biggest_16dp</item>
        <item name="android:paddingTop">@dimen/padding_biggest_16dp</item>
        <item name="android:paddingEnd">@dimen/padding_big_12dp</item>
        <item name="android:paddingBottom">@dimen/padding_biggest_16dp</item>
    </style>

    <style name="ScreenOptionText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="android:textSize">@dimen/text_size_medium_16sp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="ScreenOptionImage">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">end</item>
        <item name="android:background">?attr/colorSecondary</item>
    </style>

    <style name="SearchBarLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/corner_rectangle</item>
        <item name="android:layout_marginHorizontal">@dimen/margin_biggest_16dp</item>
        <item name="android:layout_marginTop">@dimen/margin_medium_8dp</item>
    </style>

    <style name="SearchBar">
        <item name="android:inputType">text</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:paddingVertical">10dp</item>
        <item name="android:paddingStart">@dimen/padding_big_12dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">36dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:layout_weight">1</item>
        <item name="android:backgroundTint">?attr/colorSurface</item>
        <item name="android:textSize">@dimen/text_size_medium_16sp</item>
        <item name="android:textColor">@color/main_font_black</item>
        <item name="android:textColorHint">?attr/colorAccent</item>
        <item name="android:drawableTint">?attr/colorAccent</item>
    </style>

    <style name="ClearButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:backgroundTint">?attr/colorSurface</item>
    </style>

</resources>