<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingVertical="@dimen/padding_medium_8dp"
    android:paddingStart="@dimen/padding_biggest_16dp"
    android:paddingEnd="@dimen/padding_big_12dp"
    tools:ignore="RtlSymmetry">

    <ImageView
        android:id="@+id/album_pic"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginEnd="@dimen/margin_medium_8dp" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginEnd="@dimen/margin_medium_8dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/track_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/ys_display_regular"
            android:maxHeight="19dp"
            android:textSize="@dimen/text_size_medium_16sp"
            tools:ignore="NestedWeights" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/artist_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/ys_display_regular"
                android:textSize="11sp"
                android:maxHeight="13dp"
                android:minWidth="54dp" />

            <ImageView
                android:layout_width="13dp"
                android:layout_height="13dp"
                android:importantForAccessibility="no"
                android:src="@drawable/point" />

            <TextView
                android:id="@+id/track_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/ys_display_regular"
                android:textSize="11sp"
                android:maxHeight="13dp"
                android:minWidth="54dp" />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_gravity="center"
        android:src="@drawable/arrow_forward"
        android:importantForAccessibility="no" />
</LinearLayout>