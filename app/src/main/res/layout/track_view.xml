<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/TrackPlate"

    tools:ignore="RtlSymmetry">

    <ImageView
        android:id="@+id/album_pic"
        style="@style/TrackAlbum"
        android:importantForAccessibility="no"
        tools:src="@drawable/empty_album_pic"/>

    <LinearLayout style="@style/TrackTextList">

        <TextView
            android:id="@+id/track_name"
            style="@style/TrackNameText"
            tools:ignore="NestedWeights"
            tools:text="Track Name"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/artist_name"
                style="@style/TrackArtistName"
                tools:text="Artist Name"/>

            <ImageView
                style="@style/TrackSeparator"
                android:importantForAccessibility="no"
                android:src="@drawable/point"
                app:tint="?attr/point_separator" />

            <TextView
                android:id="@+id/track_time"
                style="@style/TrackTime"
                tools:text="Track time"/>
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/track_action_button"
        style="@style/TrackActionButton"
        android:importantForAccessibility="no"
        android:src="@drawable/arrow_forward"
        app:tint="?attr/point_separator" />
</LinearLayout>